<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiqianghu.usedbook_shop.view.fragment.AuditFailureFragment">

    <include layout="@layout/center_title_toolbar"></include>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@mipmap/iconfont_shenheshibai" />

    <TextView
        android:id="@+id/tv_failure_reason"
        style="@style/common_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="信息不符" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_other_account"
            style="@style/link_text_style"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="@string/login_other_account"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_repeat_submit_info"
            style="@style/link_text_style"
            android:text="@string/repeat_submit_info"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
