<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <Button
        android:id="@+id/btn_chat_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_chat_add_selector"
        android:gravity="center" />

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/emoji" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:background="@drawable/chat_edit_input_bg"
        android:imeOptions="flagNoExtractUi"
        android:padding="5dp" />


    <Button
        android:id="@+id/btn_chat_send"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_chat_send_selector"
        android:gravity="center"
        android:onClick="sendChatMessage"></Button>

</LinearLayout>

