<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiqianghu.usedbook_shop.view.fragment.BasicInfoForApplyForShopFragment">

    <com.weiqianghu.usedbook_shop.view.customview.ClearEditText
        android:id="@+id/et_shop_name"
        style="@style/common_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/shop_name"
        android:maxLength="30" />

    <com.weiqianghu.usedbook_shop.view.customview.ClearEditText
        android:id="@+id/et_contacts"
        style="@style/common_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contacts"
        android:maxLength="30" />

    <com.weiqianghu.usedbook_shop.view.customview.ClearEditText
        android:id="@+id/et_contact_number"
        style="@style/phone_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contact_number" />

    <RelativeLayout
        android:id="@+id/lt_address"
        style="@style/like_et_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/common_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_background"
        android:text="@string/next"
        android:textColor="@color/white" />


</LinearLayout>
