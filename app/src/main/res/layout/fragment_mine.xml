<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.ShopFragment">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_user_img"
        android:layout_width="@dimen/xlarge_dp"
        android:layout_height="@dimen/xlarge_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/default_user_img"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_shop_name"
        style="@style/common_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        tools:text="传奇书屋" />

    <RelativeLayout
        android:id="@+id/edit_shop_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:background="@drawable/box_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_user_info"
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_user_img" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_dp"
            android:layout_toRightOf="@id/iv_user_info"
            android:gravity="center_vertical"
            android:text="@string/edit_shop_info" />

        <ImageView
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:background="@drawable/box_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_statistics"
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/statistics" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_dp"
            android:layout_toRightOf="@id/iv_statistics"
            android:gravity="center_vertical"
            android:text="@string/statistics" />

        <ImageView
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:background="@drawable/box_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/message" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_dp"
            android:layout_toRightOf="@id/iv_message"
            android:gravity="center_vertical"
            android:text="@string/message" />

        <ImageView
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:background="@drawable/box_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/settings" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_dp"
            android:layout_toRightOf="@id/iv_settings"
            android:gravity="center_vertical"
            android:text="@string/setting" />

        <ImageView
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:background="@drawable/box_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/about" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_dp"
            android:layout_toRightOf="@id/iv_about"
            android:gravity="center_vertical"
            android:text="@string/about" />

        <ImageView
            android:layout_width="@dimen/small_dp"
            android:layout_height="@dimen/small_dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/enter" />
    </RelativeLayout>


</LinearLayout>
