<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme"></style>

    <style name="small_text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="small_text_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="link_text_style">
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="username_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:hint">@string/username_hint</item>
        <item name="android:inputType">phone</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">11</item>
    </style>

    <style name="password_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">16</item>
    </style>

    <style name="common_edit_text_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">11</item>
    </style>

    <style name="common_Text_input_layoutedit_text_style">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:maxLength">11</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="phone_edit_text_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="id_edit_text_style">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">18</item>
        <item name="android:inputType">number|text</item>
    </style>

    <style name="like_et_text_view">
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxLength">11</item>
    </style>

    <style name="common_text_style">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

    <style name="position_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
